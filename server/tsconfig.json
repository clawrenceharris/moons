{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "moduleResolution": "node",
    "noEmit": false,
    "skipDefaultLibCheck": true
  },

  "include": ["src"]
}
