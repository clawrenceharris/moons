{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipDefaultLibCheck": true
  },

  "include": ["controllers", "db", "routes", "*.ts"]
}
